<div id ='' style='overflow: auto;'>

<div class='top'>
	<div class="navbar">
		<a href="https://www.supremenewyork.com"><img src='/img/navbar.jpg' class='nav_pic'></a>
		<div class='popup'>
			<p>This brings you to supreme</p>
		</div>
		<a href="/" class = 'nav_home'>Home</a>
		<a href="/about" class = 'nav_about'>About</a>
	</div>
</div>

	<div id="header-container">

			<div class ='header'>
				<h2>The link knows all so can you </h2>
			</div>

			<div class='forms'> 
				<form action="/create_url" method="post" id ='shortener_forms'>
				    Enter URL:
				    <input type="text" class ='text1' name="long_url" placeholder='paste a link'>
				    <input type="submit" class ='text2' value="SHORTEN">
				 </form>
			</div>

			<div class='check'>
				<% if @errors == nil %> 
					<p>The url cannot be blank</p>
				<% end %>
			</div>
	</div>


	<div id="body-container">

		 <table align='center' width='800' class='table'>
		 	<thead>
			 	<tr>
				 	<th>Id</th>
				 	<th>Long_Url</th>
				 	<th>Short_Url</th>
				 	<th>Url_Count</th>
				 </tr>
			</thead>

				<tbody>
				 <% Url.all.order('id ASC').each do |i| %>
				 	<tr class ='notfirst'>
				 		<td><%= i.id %></td>
				 		<td><%= i.long_url %></td>
				 		<td><a href= '/<%=i.short_url%>' class = 'link'>localhost:9393/<%= i.short_url %></a></td>
				 		<td><%= i.url_click_count %></td>
				 	</tr>
				 <% end %> 
				 </tbody>
		</table>
	</div>
</div>
